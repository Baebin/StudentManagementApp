<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="270dp"
            android:layout_height="148dp"
            tools:srcCompat="@drawable/human" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#000000" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학번: 00000 "
            android:textSize='18dp'
            android:textColor="#000000"
            android:fontFamily="@font/hhh"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름: 신천고 "
            android:textSize='18dp'
            android:textColor="#000000"
            android:fontFamily="@font/hhh"
            android:gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/tv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="list"
            android:textColor="#989898"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/hhh"
                android:text="이번주 급식"
                android:textColor="#FF0303"
                android:textSize='20dp' />

            <Button
                android:id="@+id/button_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/hhh"
                android:text="학교 홈페이지"
                android:textColor="#FF9800"
                android:textSize='20dp' />

            <Button
                android:id="@+id/button_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/hhh"
                android:text="학사일정 바로가기"
                android:textColor="#FFC107"
                android:textSize='20dp' />

            <Button
                android:id="@+id/button_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/hhh"
                android:text="오류 사항 문의↓"
                android:textColor="#4CB750"
                android:textSize='20dp' />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:autoLink="email"
                android:fontFamily="@font/hhh"
                android:gravity="center"
                android:text="baebine@naver.com"
                android:textColor="#6C39C5"
                android:textColorLink="#2196F3"
                android:textSize='18dp' />

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="" />
        </LinearLayout>

        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/hhh"
            android:text="로그아웃"
            android:textColor="#A52BBA" />

         </LinearLayout>
</LinearLayout>




